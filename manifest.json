{
"manifest_version": 2,
"name": "JIRA Description Templates",
"version": "0.1.0",
"description": "When creating a new issue in JIRA this extention will automatically populate the description field with a template relevant to the issue type.",
"browser_action": {
    "default_popup": "popup.html"
  },
"background": {
    "scripts": ["resources/js/jquery-2.2.2.min.js", "eventPage.js"],
    "persistent": false
  },
"content_scripts": [
    {
        "matches": [
            "http://redbrickmedia.atlassian.net/*",
            "https://redbrickmedia.atlassian.net/*"
        ],
        "js": [
            "resources/js/jquery-2.2.2.min.js",
            "template.js"
        ],
        "run_at": "document_end"
    }
  ],
"permissions":[
    "storage",
    "*://*/*.json",
    "file:///*.json"
  ]
}
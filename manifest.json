{
    "manifest_version": 2,
    "name": "JIRA Template Injector",
    "version": "0.1.0",
    "description": "When creating a new issue in JIRA this extension will automatically populate the description field with a template relevant to the issue type.",
    "icons": {
        "16": "resources/images/icons/icon-red-16.png",
        "48": "resources/images/icons/icon-red-48.png",
        "128": "resources/images/icons/icon-red-128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["resources/js/jquery-2.2.3.js", "eventPage.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://redbrickmedia.atlassian.net/*",
                "https://redbrickmedia.atlassian.net/*"
            ],
            "js": [
                "resources/js/jquery-2.2.3.js",
                "templateInjector.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions":[
        "storage",
        "downloads",
        "*://*/*.json",
        "file:///*.json"
    ]
}
